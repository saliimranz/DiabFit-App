<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/body_part_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Body Part"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/equipment_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:id="@+id/gif_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/target_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/secondary_muscles_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secondary Muscles"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/instructions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instructions"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/sets_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/decrease_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/completed_sets_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/increase_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

</LinearLayout>
