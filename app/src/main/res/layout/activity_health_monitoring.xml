<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HealthMonitoringActivity">

  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="0dp"
      android:layout_height="?attr/actionBarSize"
      android:background="?attr/colorPrimary"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:title="Health Monitoring"
      app:titleTextColor="@android:color/white" />

  <Button
      android:id="@+id/btn_blood_suger_logging"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Blood Suger"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar"
      app:layout_constraintVertical_bias="0.19" />

  <Button
      android:id="@+id/btn_health_insights"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Health Insights"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_blood_suger_logging"
      app:layout_constraintVertical_bias="0.110000014" />

  <Button
      android:id="@+id/btn_medication_Reminders"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Medication Reminders"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_health_insights"
      app:layout_constraintVertical_bias="0.110000014" />

  <Button
      android:id="@+id/btn_emergency_alerts"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Emergency Alerts"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btn_medication_Reminders"
      app:layout_constraintVertical_bias="0.18" />

</androidx.constraintlayout.widget.ConstraintLayout>